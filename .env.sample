# Tavily Chat Agent - Environment Variables

# Required API Keys
TAVILY_API_KEY=your_tavily_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Application URLs
VITE_APP_URL=http://localhost:5173
BACKEND_URL=http://localhost:8080

# Security Settings
MAX_FILE_SIZE_MB=10
RATE_LIMIT_PER_MINUTE=10
ALLOWED_FILE_EXTENSIONS=[".pdf",".txt",".md",".docx",".csv",".html"]

# Agent Configuration
MAX_SEARCH_RESULTS=10
CRAWL_LIMIT=15
MAX_CONVERSATION_TURNS=50

# Logging
LOG_LEVEL=INFO
# Optional: Sentry DSN for error tracking
# SENTRY_DSN=your_sentry_dsn_here

# Database (Optional - defaults to file-based storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/tavily_chat

# Redis (Optional - defaults to no caching)
REDIS_URL=redis://localhost:6379

# Docker Compose Overrides
# Uncomment these if using docker-compose
# DATABASE_URL=postgresql://tavily:tavily123@postgres:5432/tavily_chat
# REDIS_URL=redis://redis:6379
